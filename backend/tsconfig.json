{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "src/**/*", "src/firebaseConfig.ts"],
  "exclude": ["node_modules"]
}
